<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/order_items_text"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="@color/dark_grey"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/order_items_text"
            android:id="@+id/order_total_cost_text"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="@color/dark_grey"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/order_placed_time_text"
            android:layout_below="@+id/order_total_cost_text"
            android:textColor="@color/dark_grey"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/order_placed_time_text"
            android:id="@+id/order_status_text_view"
            android:layout_width="match_parent"
            android:textColor="@color/dark_grey"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/order_status_text_view"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#FFC554"
            android:padding="5dp"
            />

    </RelativeLayout>
</layout>