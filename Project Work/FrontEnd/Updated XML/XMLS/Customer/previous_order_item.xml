<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/order_items_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey3"
            />

        <TextView
            android:id="@+id/order_total_cost_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey3"
            android:layout_below="@id/order_items_text" />

        <TextView
            android:id="@+id/order_delivered_text"
            android:layout_width="match_parent"
            android:textColor="@color/grey3"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_total_cost_text" />


        <TextView
            android:id="@+id/order_status_text_view"
            android:layout_width="match_parent"
            android:textColor="@color/grey3"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_delivered_text"
            android:layout_marginBottom="8dp" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/order_status_text_view"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lightgrey"
            android:padding="5dp" />


    </RelativeLayout>
</layout>